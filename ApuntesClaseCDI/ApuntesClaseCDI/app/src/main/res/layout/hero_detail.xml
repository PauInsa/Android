<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nav_bar"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/hero_detail_back_arrow"
            android:layout_width="@dimen/image_button_mid"
            android:layout_height="@dimen/image_button_mid"
            android:background="@drawable/back_arrow" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/Hero_detail_delete"
            android:layout_width="@dimen/image_button_mid"
            android:layout_height="@dimen/image_button_mid"
            android:background="@drawable/delete_icon" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/hero_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text= "Hero Name"
                android:textAlignment="center"
                android:textSize="@dimen/text_title"
                />
            <TextView
                android:id="@+id/hero_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text= "Hero Description"
                android:textSize="@dimen/text_regular"
                android:layout_marginTop="@dimen/padding_normal"
                />

        </LinearLayout>

    </ScrollView>





</LinearLayout>